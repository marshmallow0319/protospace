= form_for(@prototype, html: {class: "container proto-new"} ) do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, autofocus: true, placeholder: "Title", class: "proto-new-title"
    .row
      .col-md-12
        .cover-image-upload
          = image_tag @prototype.photos.main.first.content, style: "width: 100%; height: 500px;"
          = f.fields_for :photos, @prototype.photos.main.first.content do |photo|
            = photo.file_field :content
            = photo.hidden_field :status, value: :main
      .col-md-12
        %ul.proto-sub-list.list-group
          %li.list-group-item.col-md-4
            .image-upload
              = image_tag @prototype.photos.sub.first.content, style: "width: 100%; height: 200px;"
              = f.fields_for :photos, @prototype.photos.sub.first.content do |photo|
                = photo.file_field :content
                = photo.hidden_field :status, value: :sub
          %li.list-group-item.col-md-4
            .image-upload
              = image_tag @prototype.photos.sub.second.content, style: "width: 100%; height: 200px;"
              = f.fields_for :photos, @prototype.photos.sub.second.content do |photo|
                = photo.file_field :content
                = photo.hidden_field :status, value: :sub
          %li.list-group-item.col-md-4
            .image-upload-plus
              %span +
    .row.proto-description
      .col-md-12
        = f.text_field :catch, autofocus: true, placeholder: "Catch Copy"
      .col-md-12
        = f.text_area :concept, autofocus: true, cols: "30", rows: "4", placeholder: "Concept"
      .col-md-12
        %h4 Tag List
        .row
          .col-md-3
            %input{type: "text", placeholder: "Web Design"}/
          .col-md-3
            %input{type: "text", placeholder: "UI"}/
          .col-md-3
            %input{type: "text", placeholder: "Application"}/
    .row.text-center.proto-btn
      = f.submit "Publish", class: "btn btn-lg btn-primary btn-block"
