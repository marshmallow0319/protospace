- if user_signed_in?
  - if prototype.liked_user?(current_user)
    = button_to prototype_like_path(prototype, like), method: :delete, class: "btn btn-default increment-botton", remote: true do
      = image_tag("icon_red_heart.svg")
      %span.num#like-sum
        Like
        = prototype.likes.count
  - else
    = button_to prototype_likes_path(prototype), method: :post, class: "btn btn-default increment-botton", remote: true do
      = image_tag("icon_heart.svg")
      %span.num#like-sum
        Like
        = prototype.likes.count
- else
  %button.btn.btn-default.increment-botton
    = image_tag("icon_heart.svg")
    %span.num#like-sum
      Like
      = prototype.likes.count


