- if user_signed_in?
  - if prototype.liked_user?(current_user)
    = button_to prototype_like_path(prototype, like), method: :delete, class: "btn btn-default increment-botton", id: "unlike-button", remote: true do
      = image_tag("icon_red_heart.svg")
      %span.num#like-sum
        Like
        = prototype.likes.count
  - else
    = button_to prototype_likes_path(prototype), method: :post, class: "btn btn-default increment-botton", id: "like-button", remote: true do
      = image_tag("icon_heart.svg")
      %span.num#like-sum
        Like
        = prototype.likes.count
- else
  = image_tag("icon_heart.svg")
  %span
    = prototype.likes.count
