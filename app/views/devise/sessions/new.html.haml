.container
  %form.form-signin
  = form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "form-signin"} ) do |f|
    = devise_error_messages!
    %h2.form-signin-heading Please sign in
    %label.sr-only{for: "inputEmail"} Email address
    = f.email_field :email, autofocus: "", placeholder: "Email address", required: "", id: "inputEmail", class: "form-control"
    %label.sr-only{for: "inputPassword"} Password
    = f.password_field :password, autocomplete: "off", placeholder: "Password", required: "", id: "inputPassword", class: "form-control"
    .checkbox
      %label
        = f.check_box :remember_me
        Remember me
    = f.submit "Sign in", class: "btn btn-lg btn-primary btn-block"
    %p
      Not a member?
      = link_to "Sign up now",new_user_registration_path, method: :get
